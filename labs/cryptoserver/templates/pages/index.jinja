<!--Hold Basic page functionality -->
<!doctype html>
<html lang="en-US">
<head>
   <title>{% block title %}Johnny Hash{% endblock title %}</title>
    <link rel="icon" href="/static/img/spy.ico" type="image/png"/>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
    .w3-row-padding img {margin-bottom: 12px;}
    {#  Set the width of the sidebar to 120px#}
    .w3-sidebar {width: 120px;background: #222;}
    {# Add a left margin to the "page content" that matches the width of the sidebar (120px) #}
    #main {margin-left: 120px;}
    {#  Remove margins from "page content" on small screens #}
    @media only screen and (max-width: 600px) { #main {margin-left: 0} }
</style>

    {% block head_block %}{% endblock head_block %}
    {#
    This block can be overwritten by child templates to add page-specific CSS
    #}
</head>
<body class="w3-black">
<div>
<!-- Icon Bar (Sidebar - hidden on small screens) -->
<nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center">
  <!-- Avatar image in top left corner -->
  <img src="/static/img/sinister (2).jpg" style="width:100%" alt="a thing" class="w3-border-blue-gray">

  <a href="/" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
    <i class="fa fa-home w3-xxlarge"></i>
    <p>HOME</p>
  </a>

  {% block navblock %} {% endblock navblock %}
</nav>
</div>

{% block picture %}
    <div class="w3-padding-large" id="main">
          <!-- Header/Home -->
          <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
            <h1 class="w3-jumbo"><span class="w3-hide-small">Welcome to</span> Johnny Hash</h1>
            <p>Cryptographic Challenges and Tools...</p>
            <img src="/static/img/sinister (2).jpg" alt="a bigger thing" class="w3-image" width="992" height="600">
          </header>
    </div>
{% endblock picture %}

{% block content %}{# Page content goes here... #}{% endblock content %}


            <!-- Footer -->
<footer class="w3-content w3-padding-64 w3-text-grey w3-xlarge">
  <p class="w3-medium">Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank" class="w3-hover-text-green">w3.css</a></p>
            <!-- End footer -->
</footer>
        <!-- END PAGE CONTENT -->
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
{% block js_block %}{% endblock js_block %}
</body>
</html>
