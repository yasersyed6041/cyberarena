{% extends 'index.jinja' %}
{% block content %}

<h1 style="background-color: black; color: white; opacity: 0.7">An Infinite Well of Information...</h1>
	<div class="limiter">
		<div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <div class="login" id="main">
                    {% if login_error %}
                    {{ login_error }}
                    {% endif %}

                    <form method="POST" action="{{ request.path }}">
                        <span class="login100-form-title p-b-32" style="color: black; font-size: 42px;">Beam Me Up, Scotty!</span>

                        <!-- Username input -->
                        <span class="txt1 p-b-11" style="color: black">Username</span>
                        <div class="wrap-input100 validate-input m-b-36" style="margin-bottom: 10px;" data-validate = "Username is required">
                            <input class="input100" type="text" name="username" id="username" />
                        </div>

                        <!-- Password Input -->
                        <span class="txt1 p-b-11" style="color: black">Password</span>

                        <div style="margin-bottom: 10px;" class="wrap-input100 validate-input m-b-12" data-validate = "Password is Required">
                            <span class="btn-show-pass"><i class="fa fa-eye"></i></span>
                            <input class="input100" type="password" name="password" id="password" />
                            <span class="focus-input100"></span>
                        </div>

                        <!-- Login Button -->
                        <div style="margin-bottom: 10px;" class="container-login100-form-btn">
                            <input type="submit" value="Login" class="login100-form-btn" style="font-size:25px"/>
                        </div>
                    </form>
                </div>
            </div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>
{% endblock content %}

{% block popup %}

 <!-- The Modal -->
    <input class="hook-checkbox-cb" id="hook-checkbox-cb" type="checkbox" />
    <div class="hook-popup">
      <span class="message">
          Houston, We Have A Problem... :( <br> Please log in again
      </span>
      <span class="mobile">
          Houston, We Have A Problem... :( <br>Please log in again
      </span>
      <label for="hook-checkbox-cb" class="hook-close-cb"><a></a>x</label>
    </div>

{% endblock popup %}